@model PersonelMVCUI1.Models.Entity_Framework.Kullanici

<br />
<br />

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />


</head>
<body>

    @ViewBag.Mesaj

    <div class="container">

        <h3>Lütfen Giriş yapınız.</h3>



        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Kullanıcı Emaili Giriniz" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Sifre)
                @Html.PasswordFor(m => m.Sifre, new { @class = "form-control", placeholder = "Parola" })
            </div>

            <button type="submit" class="btn btn-block btn-info">Giriş Yap</button>
        }

    </div>

</body>
</html>
